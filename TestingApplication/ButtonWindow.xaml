<Window x:Class="TestingApplication.ButtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingApplication"
        mc:Ignorable="d"
        Title="ButtonWindow" Height="450" Width="800">
    <Grid>
       
            <Button x:Name="btn" Content="Click Me" RenderTransformOrigin="4.035,-1.289" Click="btn_Click" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" />
            <Button x:Name="disbtn" Content="Disabled Button" RenderTransformOrigin="4.035,-1.289" Click="btn_Click" IsEnabled="False" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" />
        
    </Grid>
</Window>
