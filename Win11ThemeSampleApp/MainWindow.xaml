<Window x:Class="Win11ThemeSampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Win11ThemeSampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <GroupBox Header="Group 1" Margin="10">
                <StackPanel>
                    <RadioButton Content="RadioButton1" Name="RadioButton1_1" GroupName="Group1" />
                    <RadioButton Content="RadioButton2" Name="RadioButton1_2" GroupName="Group1" />
                    <RadioButton Content="RadioButton3" Name="RadioButton1_3" GroupName="Group1" IsEnabled="false" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Group 2" Margin="10">
                <StackPanel Name="getRadioButtons">
                    <!-- Getting radio buttons from code behind -->
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
